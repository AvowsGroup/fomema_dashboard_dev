              <div class="chard-card">
                <div class="card">
                  <div class="card-header">
                    FW Registration by States <i class="fa fa-ellipsis-h" aria-hidden="true"></i>
                  </div>
                  <div class="card-body p-1">
                    <script type="text/javascript">
                        google.charts.load('current', {packages: ['corechart', 'bar']});
                        google.charts.setOnLoadCallback(drawStacked);

                        function drawStacked() {
                            var chartData = <%= @fw_reg_by_states.nil? ? [] : @fw_reg_by_states.to_json.html_safe %>;


                            if (!chartData.length) {
                                var placeholderDiv = document.getElementById('columnchart_values');
                                placeholderDiv.innerHTML = '<div class="center-message">No Data to Display</div>';
                            } else {
                                // Create a data table
                                var data = new google.visualization.DataTable();
                                data.addColumn('string', 'State Code');
                                data.addColumn('number', 'Total');
                                data.addColumn({type: 'string', role: 'tooltip'});

                                var stateCodeMap = {
                                    "JOHOR": "JHR",
                                    "KEDAH": "KDH",
                                    "KELANTAN": "KEL",
                                    "KUALA LUMPUR": "KUL",
                                    "LABUAN": "LBN",
                                    "MELAKA": "MLK",
                                    "NEGERI SEMBILAN": "NEG",
                                    "PAHANG": "PHG",
                                    "PERAK": "PRK",
                                    "PERLIS": "PLS",
                                    "PULAU PINANG": "PNG",
                                    "PUTRAJAYA": "PUT",
                                    "SABAH": "SBH",
                                    "SARAWAK": "SRK",
                                    "SELANGOR": "SEL",
                                    "TERENGGANU": "TRG"
                                };

                                chartData.forEach(function (row) {
                                    var stateName = row[0];
                                    var stateCode = stateCodeMap[stateName];
                                    var tooltip = stateName + ' (' + stateCode + ') \nTotal: ' + row[1] + '';
                                    data.addRow([stateCode, row[1], tooltip]);
                                });

                                var options = {
                                    hAxis: {
                                        title: 'State Codes',
                                        titleTextStyle: {
                                            color: '#000000',
                                        },
                                        slantedText: true,
                                        slantedTextAngle: 45,
                                        textStyle: {
                                            fontSize: 8,
                                        },
                                    },
                                    vAxis: {},
                                    'chartArea': {'width': '90%'},
                                };


                                var chart = new google.visualization.ColumnChart(document.getElementById('columnchart_values'));
                                chart.draw(data, options);

                            }
                        }

                    </script>
                    <div id="columnchart_values" style="width: 100%; height:100%;"></div>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-12 col-sm-6 col-md-4 mb-2">
              <div class="chard-card">
                <div class="card">
                  <div class="card-header">
                    FW Registration by Sectors <i class="fa fa-ellipsis-h" aria-hidden="true"></i>
                  </div>
                  <div class="card-body p-1">
                    <script type="text/javascript">
                        google.charts.load('current', {'packages': ['corechart']});
                        google.charts.setOnLoadCallback(drawChart);

                        function drawChart() {
                            var chartData = <%= @pi_chart_data.nil? ? [] : @pi_chart_data.to_json.html_safe %>;

                            if (!chartData.length) {
                                var placeholderDiv = document.getElementById('piechart');
                                placeholderDiv.innerHTML = '<div class="center-message">No Data to Display</div>';
                            } else {
                                var data = google.visualization.arrayToDataTable(chartData);

                                var options = {
                                    legend: {
                                        position: 'right',
                                        alignment: 'center',
                                    },
                                    'chartArea': {'width': '100%', 'height': '100%'},
                                    vAxis: {minValue: 0},
                                    pieSliceText: 'percentage',
                                    pieSliceTextStyle: {
                                        fontSize: 10, // Default font size
                                    },
                                };

                                var maxFontSize = 10; // Default font size

                                // Loop through the data to adjust font size for small values
                                for (var row = 0; row < data.getNumberOfRows(); row++) {
                                    var value = data.getValue(row, 1);
                                    var fontSize = maxFontSize; // Set to default

                                    if (value < 7) {
                                        fontSize = 7; // Decrease font size for values less than 7
                                    }
                                    if (value < 3) {
                                        fontSize = 5; // Further decrease font size for values less than 3
                                    }

                                    options.pieSliceTextStyle.fontSize = fontSize;

                                    var chart = new google.visualization.PieChart(document.getElementById('piechart'));
                                    chart.draw(data, options);
                                }
                            }
                        }
                    </script>

                    <div id="piechart" style="width: 100%; height:100%;"></div>
                  </div>
                </div>
              </div>
